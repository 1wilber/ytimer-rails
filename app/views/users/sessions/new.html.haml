
.hero.is-fullheight-with-navbar
  .hero-body.is-align-items-center.is-justify-content-center.is-flex-direction-column
    .card{style: "max-width: 500px; width: 100%;"}
      .card-content
        %h2.is-size-4.has-text-centered.has-text-weight-bold.mb-5= I18n.t("devise.title.sessions")
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email" }
            = f.input :password,
              required: false,
              input_html: { autocomplete: "current-password" }
            .is-flex.is-justify-content-space-between
              = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              = link_to "Forgot your password?", new_password_path(resource_name)

          .form-actions
            = f.button :submit, I18n.t("devise.sessions.new.sign_in"), class: "is-primary is-fullwidth mt-3"
